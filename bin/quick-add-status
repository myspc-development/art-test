#!/usr/bin/env node
import path from 'path';
import { fileURLToPath } from 'url';
import { verify } from '../scripts/verify-quick-add-event.js';

const __dirname = path.dirname(fileURLToPath(import.meta.url));
const res = verify();
const status = (v) => v ? '✅' : '❌';
console.log(`org_event_quick_add: registered=${status(res.registered)} callable=${status(res.callable)} visible=${status(res.visible)} selectors=${status(res.selectors)}`);
if (res.messages.length) {
  res.messages.forEach(m => console.error('- ' + m));
  process.exit(1);
}
