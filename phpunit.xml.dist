<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/php/bootstrap.php"
         colors="true"
         verbose="true"
         backupGlobals="false">
    <php>
        <env name="WP_PHPUNIT__DIR" value="vendor/wp-phpunit/wp-phpunit"/>
    </php>
    <testsuites>
        <testsuite name="Plugin">
            <directory path="tests/php" suffix="-test.php"/>
        </testsuite>
    </testsuites>
</phpunit>
