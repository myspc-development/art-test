<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/wp-bootstrap.php" colors="true" beStrictAboutOutputDuringTests="true" failOnWarning="true" failOnRisky="true">
  <testsuites>
    <testsuite name="WordPress">
      <file>tests/phpunit/ParityCanonicalizationTest.php</file>
      <file>tests/Rest/UserLayoutControllerTest.php</file>
    </testsuite>
  </testsuites>

  <!-- Optional, if you want to override defaults -->
  <php>
    <ini name="display_errors" value="0"/>
    <ini name="error_reporting" value="-1"/>
    <ini name="opcache.enable_cli" value="0"/>
    <env name="XDEBUG_MODE" value="off"/>
    <server name="WP_PHPUNIT__DIR" value="vendor/wp-phpunit/wp-phpunit"/>
    <const name="WP_TESTS_CONFIG_FILE_PATH" value="wp-tests-config.php"/>
    <const name="WP_TESTS_DOMAIN" value="example.org"/>
    <const name="WP_TESTS_EMAIL" value="admin@example.org"/>
    <env name="PLUGIN_MAIN_FILE" value="artpulse-management.php"/>
  </php>
</phpunit>
