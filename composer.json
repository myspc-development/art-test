{
  "name": "yourorg/artpulse",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "ArtPulse\\": "src/",
      "ArtPulse\\Widgets\\": "widgets/",
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArtPulse\\Tests\\": "tests/Support/"
    }
  },
  "require-dev": {
    "wp-phpunit/wp-phpunit": "^6",
    "yoast/phpunit-polyfills": "^2.0",
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.8",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/wordpress-tests-stubs": "^6.8"
  },
  "require": {
    "yahnis-elsts/plugin-update-checker": "^5.6",
    "erusev/parsedown": "^1.7"
  },
  "scripts": {
    "pretest": "php tools/preflight.php",
    "test": "composer run test:unit && composer run test:wp",
    "test:unit": "vendor/bin/phpunit -c phpunit.unit.xml.dist",
    "test:wp": "vendor/bin/phpunit -c phpunit.wp.xml.dist --testsuite WP",
    "wp:core-link": "php bin/wp-core-link",
    "cs": "php -dmemory_limit=1G vendor/bin/phpcs -p",
    "cs:fix": "vendor/bin/phpcbf",
    "stan": "php -dmemory_limit=1G vendor/bin/phpstan analyse --memory-limit=1G",
    "stan:baseline": "vendor/bin/phpstan analyse --generate-baseline=phpstan-baseline.neon",
    "test:db": "php bin/create-test-db.php",
    "test:coverage": "php -d pcov.enabled=1 -d pcov.directory=src vendor/bin/phpunit -c phpunit.unit.xml.dist --coverage-clover build/coverage-unit.xml || XDEBUG_MODE=coverage vendor/bin/phpunit -c phpunit.unit.xml.dist --coverage-clover build/coverage-unit.xml",
    "test:wp:smoke": "vendor/bin/phpunit -c phpunit.wp.xml.dist tests/Smoke tests/Rest/RouteAuditSmokeTest.php",
    "test:rest": "vendor/bin/phpunit -c phpunit.wp.xml.dist tests/Rest --log-junit build/junit-rest.xml",
    "test:rest:failures": "php tools/print-failures.php build/junit-rest.xml"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
