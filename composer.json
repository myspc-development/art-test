{
  "name": "yourorg/artpulse",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "ArtPulse\\": "src/",
      "ArtPulse\\Widgets\\": "widgets/",
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArtPulse\\Tests\\": "tests/Support/"
    }
  },
  "require-dev": {
    "wp-phpunit/wp-phpunit": "^6",
    "yoast/phpunit-polyfills": "^2.0",
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.8",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/wordpress-tests-stubs": "^6.8",
    "antecedent/patchwork": "^2.1"
  },
  "require": {
    "yahnis-elsts/plugin-update-checker": "^5.6",
    "erusev/parsedown": "^1.7"
  },
  "scripts": {
    "test": [
      "@test:php:local",
      "@test:unit",
      "@test:rest"
    ],
    "test:frontend": "vendor/bin/phpunit -c phpunit.wp.xml.dist tests/Frontend",
    "preflight": "php tools/preflight.php",
    "wp:core-link": "php bin/wp-core-link",
    "test:unit": "vendor/bin/phpunit -c phpunit.unit.xml.dist --no-coverage",
    "test:rest": "vendor/bin/phpunit -c phpunit.wp.xml.dist --group restapi -v --log-junit build/junit.xml",
    "test:rest:buckets": "bash bin/rest-buckets",
    "test:smoke": "bin/test-rest-smoke",
    "test:php:local": [
      "@test:unit",
      "@test:rest"
    ],
    "test:php:wp": "phpunit -c phpunit.wp.xml.dist --log-junit build/junit-phpunit.xml --coverage-clover build/coverage-phpunit.xml",
    "test:php:unit": "phpunit -c phpunit.unit.xml.dist --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
