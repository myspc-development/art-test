{
  "name": "yourorg/artpulse",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "ArtPulse\\": "src/",
      "ArtPulse\\Widgets\\": "widgets/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArtPulse\\Tests\\Stubs\\": "tests/Stubs/"
    }
  },
  "require-dev": {
    "wp-phpunit/wp-phpunit": "^6",
    "yoast/phpunit-polyfills": "^2",
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.8",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/wordpress-tests-stubs": "^6.8"
  },
  "require": {
    "yahnis-elsts/plugin-update-checker": "^5.6",
    "erusev/parsedown": "^1.7"
  },
    "scripts": {
    "pretest": "php tools/preflight.php",
    "test": [
      "@test:unit",
      "@test:wp"
    ],
    "test:unit": "php -d opcache.enable_cli=0 -d display_errors=0 vendor/bin/phpunit -c phpunit.unit.xml.dist",
    "test:wp": "WP_PHPUNIT__DIR=vendor/wp-phpunit/wp-phpunit WP_TESTS_CONFIG_FILE_PATH=wp-tests-config.php php -d opcache.enable_cli=0 -d display_errors=0 vendor/bin/phpunit -c phpunit.wp.xml.dist",
    "coverage": "php -d pcov.enabled=1 -d pcov.directory=src vendor/bin/phpunit -c phpunit.unit.xml.dist --coverage-clover build/coverage-unit.xml || XDEBUG_MODE=coverage php vendor/bin/phpunit -c phpunit.unit.xml.dist --coverage-clover build/coverage-unit.xml",
    "cs": "php -dmemory_limit=1G vendor/bin/phpcs -p",
    "cs:fix": "vendor/bin/phpcbf",
    "stan": "php -dmemory_limit=1G vendor/bin/phpstan analyse --memory-limit=1G",
    "stan:baseline": "vendor/bin/phpstan analyse --generate-baseline=phpstan-baseline.neon",
    "test:db": "php bin/create-test-db.php",
    "test:coverage": "php -d pcov.enabled=1 -d pcov.directory=src vendor/bin/phpunit -c phpunit.unit.xml.dist --coverage-clover build/coverage-unit.xml"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
