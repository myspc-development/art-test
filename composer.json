{
  "name": "yourorg/artpulse",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "ArtPulse\\": "src/",
      "ArtPulse\\Widgets\\": "widgets/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArtPulse\\Tests\\Stubs\\": "tests/Stubs/"
    }
  },
  "require-dev": {
    "wp-phpunit/wp-phpunit": "^6",
    "yoast/phpunit-polyfills": "^2",
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.8",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3"
  },
  "require": {
    "yahnis-elsts/plugin-update-checker": "^5.6",
    "erusev/parsedown": "^1.7"
  },
  "scripts": {
    "test:db": "mysql -u ${WP_TESTS_DB_USER:-root} -p\"${WP_TESTS_DB_PASS}\" -h ${WP_TESTS_DB_HOST:-127.0.0.1} -e \"CREATE DATABASE IF NOT EXISTS ${WP_TESTS_DB_NAME:-wordpress_test} DEFAULT CHARACTER SET utf8mb4;\"",
    "test": "vendor/bin/phpunit -c phpunit.xml.dist"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
