{
  "name": "artpulse-management-plugin",
  "version": "0.1.3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "echo 'no-op build' && exit 0",
    "dev": "rollup -c -w",
    "lint": "eslint .",
    "typecheck": "tsc -p .",
    "test": "node tools/validate-widgets.js && node scripts/run-phpunit.js",
    "test:rest": "vendor/bin/phpunit -c phpunit.wp.xml.dist --group restapi --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml",
    "test:frontend": "vendor/bin/phpunit -c phpunit.wp.xml.dist --testsuite Frontend --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml || vendor/bin/phpunit -c phpunit.wp.xml.dist tests/Frontend --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml",
    "test:all": "npm run test:js && npm run test:php && npm run cypress:run && npm run test:e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint:test-groups": "node tools/validate-test-groups.js",
    "test:php": "npm run lint:test-groups && vendor/bin/phpunit -c phpunit.unit.xml.dist --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml && vendor/bin/phpunit -c phpunit.wp.xml.dist --log-junit build/junit-phpunit-unit.xml --coverage-clover build/coverage-phpunit-unit.xml",
    "test:php:up": "docker compose -f docker-compose.tests.yml up -d",
    "test:php:down": "docker compose -f docker-compose.tests.yml down -v",
    "test:php:local": "npm run test:php:up && composer test:php:local; npm run test:php:down",
    "test:e2e": "playwright test --reporter=junit,html",
    "test:js": "jest --runInBand --reporters=default --reporters=jest-junit --coverage",
    "test:js:ci": "jest --runInBand --reporters=jest-junit --coverage --silent",
    "test:summary": "node tools/aggregate-test-report.js",
    "ci": "bin/ap all",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report build/e2e/html"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.0",
    "dompurify": "^3.2.6",
    "emoji-picker-react": "^4.13.2",
    "framer-motion": "^11.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.346.0",
    "mysql2": "^3.6.5",
    "php-serialize": "^1.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.3.4",
    "recharts": "^2.7.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.47.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@wordpress/eslint-plugin": "^22.15.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "cssnano": "^7.1.1",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.6.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16",
    "mocha-junit-reporter": "^2.2.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "rollup": "^4.49.0",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "description": "[![CI](https://github.com/example/art-test/actions/workflows/tests.yml/badge.svg?branch=main)](https://github.com/example/art-test/actions/workflows/tests.yml) [![Coverage](https://img.shields.io/codecov/c/github/example/art-test?label=coverage)](https://codecov.io/gh/example/art-test)",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myspc-development/art-test.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/myspc-development/art-test/issues"
  },
  "homepage": "https://github.com/myspc-development/art-test#readme",
  "jest-junit": {
    "output": "build/junit-jest.xml"
  }
}
